	{{/ifeq}}
	{{#ifeq currentLanguage 'fr'}}
		<h1>Statistique</h1>
		<h3 style="color: black">Vous trouverez ici des statistiques sur toutes les pages vues au cours des 30 derniers jours.</h3>

	{{/ifeq}}


	{{#each datasets}}
	<canvas id="{{label}}" style="margin-top: 5%; margin-bottom: 10%"></canvas>
{{/each}}

	
<script>
	var labels ={{{labels}}};
	var datasets ={{{datasetsStringify}}};

	for (let i = 0; i < datasets.length; i++) {
		
	
	var ctxL = document.getElementById(datasets[i].label).getContext('2d');
	
	var myLineChart = new Chart(ctxL, {
		type: 'line',
		data: {
			labels: labels,
			datasets: [datasets[i]]
		},
		options: {
			responsive: true
		}
	});
	}
	for (let i = 0; i < labels.length; i++) {
		console.log(labels[i]);
	}

</script>

</div>
