<div class="container">
	<h1>{{ __ 'Subscribe to our Newsletter'}}</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if newsletterSubmitted}}
				<h3>Thanks for getting in touch.</h3>
			{{else}}
				<form method="post">
					<input type="hidden" name="action" value="newsletter">
					<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<label>{{ __ 'Name'}}</label>
						<input type="text" name="name.full" class="form-control" value="{{formData.[name.full]}}">
					</div>
					<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}">
					</div>

					<div class="form-group">
						<label>Deutsch</label>
						<input type="checkbox" name="deutsch" {{#if formData.deutsch}}checked{{/if}}>
					</div>

					<div class="form-group">
						<label>Francais</label>
						<input type="checkbox" name="francais" {{#if formData.francais}}checked{{/if}}>
					</div>
					
					<div class="form-actions">
						<button type="submit" class="btn btn-primary">{{ __ 'Send'}}</button>
					</div>
				</form>
			{{/if}}
		</div>
	</div>
</div>
