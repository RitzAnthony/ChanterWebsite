<div class="container">
	<h1>Subscribe to our Newsletter</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if newsletterSubmitted}}
				<h3>Thanks for getting in touch.</h3>
			{{else}}
				<form method="post">
					<input type="hidden" name="action" value="newsletter">
					<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<label>Name</label>
						<input type="text" name="name.full" class="form-control" value="{{formData.[name.full]}}">
					</div>
					<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}">
					</div>

					<div>
						<label>Deutsch</label>
						<input type="checkbox" name="deutsch" class="form-control" value="{{formData.deutsch}}">
					</div>

					<div>
						<label>Francais</label>
						<input type="checkbox" name="francais" class="form-control" value="{{formData.francais}}">
					</div>
					
					<div class="form-actions">
						<button type="submit" class="btn btn-primary">Send</button>
					</div>
				</form>
			{{/if}}
		</div>
	</div>
</div>
