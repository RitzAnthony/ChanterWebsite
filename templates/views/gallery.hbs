<div class="container">
</div>
<div class="container">
	<!-- if galleries -->
	{{#if galleries}}
		{{#each galleries}}
			<hr />
			<h3>{{name}}
			</h3>
			<div class="row gallery-images">
				{{#if heroImage}}
					<div class="col-sm-4 col-md-4 gallery-image">
						<img src="{{cloudinaryUrl heroImage }}" class="img-rounded" style="width : 100%;">
					</div>
				{{/if}}
				<div class="col-sm-8 col-md-8">
					<div class="row">
						{{#each images}}
							<div class="col-xs-4 col-sm-4 col-md-3 gallery-image" style="margin-bottom: 30px">
								<img src="{{cloudinaryUrl }}" class="img-rounded" style="width : 100%;">
							</div>
						{{/each}}
					</div>
				</div>
			</div>
		{{/each}}
	{{else}}
		<!-- else -->
		<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}
</div>
